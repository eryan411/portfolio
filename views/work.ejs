<body class="black-background">
    <nav>
        <nav class="navbar">
            <ul class="flex navbar-list">
                <li><a class='gray-text fs-400' href="/">Home</a></li>
                <li><a class='gray-text fs-400' href="/skills">My Skills</a></li>
